// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
  binaryTargets   = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  name         String
  email        String     @unique
  passwordHash String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  businesses   Business[]

  @@map("users")
}

model Business {
  id             String   @id @default(uuid())
  userId         String
  name           String
  industry       String?
  description    String?
  targetAudience String?
  brandTone      String?  @default("professional")
  socialLinks    String?  // JSON string: { twitter: "", instagram: "", linkedin: "" }
  logoUrl        String?
  brandColors    String?  // JSON string: { primary: "#000", secondary: "#fff" }
  goals          String?  // JSON string: [ "increase engagement", "brand awareness" ]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  agents Agent[]

  @@index([userId])
  @@map("businesses")
}

model Agent {
  id         String   @id @default(uuid())
  businessId String
  agentName  String   // "Marketing Manager", "Social Media Manager", etc.
  memory     String?  // Structured business context
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  business Business        @relation(fields: [businessId], references: [id], onDelete: Cascade)
  messages Message[]
  contents Content[]
  memories AgentMemory[]

  @@index([businessId])
  @@map("agents")
}

model AgentMemory {
  id        String   @id @default(uuid())
  agentId   String
  content   String   // Structured memory content
  embedding String?  // Vector embedding as JSON string (for SQLite compatibility)
  metadata  String?  // JSON string: { type: "business_info", timestamp, etc. }
  createdAt DateTime @default(now())

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@index([agentId])
  @@map("agent_memories")
}

model Message {
  id        String   @id @default(uuid())
  agentId   String
  role      String   // "user", "assistant", "system"
  message   String   // Message content
  createdAt DateTime @default(now())

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@index([agentId, createdAt])
  @@map("messages")
}

model Content {
  id        String   @id @default(uuid())
  agentId   String
  type      String   // "post", "caption", "ad", "blog", etc.
  data      String   // JSON string: { title, text, platform, hashtags, etc. }
  createdAt DateTime @default(now())

  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@index([agentId, createdAt])
  @@map("contents")
}
